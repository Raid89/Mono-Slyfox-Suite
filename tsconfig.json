{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@common/*": ["src/common/*"],
      "@libs/*": ["src/libs/*"],
      "@slyfox-platform/logger": ["src/libs/logger/src/index"],
      "@slyfox-platform/prisma": ["src/prisma/src/index"],
      "@slyfox-platform/winston-config": ["src/libs/logger/src/winston.config"],
      "@slyfox-platform/permissions": ["src/libs/permissions/src/index"],
      "@commons/*": ["src/libs/common/*"],
    }
  }
}
